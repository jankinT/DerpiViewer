<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorMain</item>
    </style>

    <style name="textBlack">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textBlackTitle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="linkedText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">web|email</item>
    </style>

    <style name="whiteTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="mainBackGround">
        <item name="background">@color/colorWhite</item>
    </style>

    <style name="icons">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="actionButton" parent="Widget.Design.FloatingActionButton">
        <item name="fabCustomSize">65dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="backgroundTint">@color/colorMain2</item>
        <item name="maxImageSize">40dp</item>
    </style>
    
    <style name="search_input">
        <item name="android:background">@drawable/draw_search_input</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="button_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="tag_style">
        <item name="android:textColor">#6f8f1b</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/draw_tag</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
